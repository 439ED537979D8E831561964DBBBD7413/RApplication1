<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rawalinfocom.rcontact">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_CALL_LOG" />
    <uses-permission android:name="android.permission.WRITE_CALL_LOG" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.PROCESS_OUTGOING_CALLS" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.WRITE_SMS" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="com.app.loople.permission.MAPS_RECEIVE" />
    <uses-permission android:name="com.rawalinfocom.rcontact.permission.C2D_MESSAGE" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.flash"
        android:required="false" />

    <permission
        android:name="com.app.loople.permission.MAPS_RECEIVE"
        android:protectionLevel="signature" />

    <permission
        android:name="com.rawalinfocom.rcontact.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <application
        android:name="com.rawalinfocom.rcontact.RContactApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">


        <!--meta-data-->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@mipmap/ic_launcher" />

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/colorAccent" />
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />
        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="06e70479d2ac89bbcd0f513bced81e424d0d41f7" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />


        <!--activity-->

        <activity
            android:name="com.rawalinfocom.rcontact.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.rawalinfocom.rcontact.BaseActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.rawalinfocom.rcontact.MobileNumberRegistrationActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.rawalinfocom.rcontact.CountryListActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />

        <activity
            android:name="com.rawalinfocom.rcontact.OtpVerificationActivity"
            android:screenOrientation="portrait" />


        <activity
            android:name="com.rawalinfocom.rcontact.ProfileRegistrationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.rawalinfocom.rcontact.MainActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.rawalinfocom.rcontact.contacts.ProfileDetailActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.rawalinfocom.rcontact.ContactListingActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.rawalinfocom.rcontact.notifications.TimelineActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.rawalinfocom.rcontact.notifications.EventsActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.rawalinfocom.rcontact.notifications.NotificationsActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.rawalinfocom.rcontact.notifications.NotificationsDetailActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name="com.rawalinfocom.rcontact.contacts.MapsActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />

        <activity
            android:name="com.rawalinfocom.rcontact.calllog.CallLogDeleteActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.rawalinfocom.rcontact.calllog.CallHistoryDetailsActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.rawalinfocom.rcontact.BlockContactListActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.rawalinfocom.rcontact.calldialer.DialerActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.rawalinfocom.rcontact.notifications.RatingHistory"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name="com.rawalinfocom.rcontact.SearchActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.rawalinfocom.rcontact.contacts.EditProfileActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.rawalinfocom.rcontact.SetPasswordActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.rawalinfocom.rcontact.EnterPasswordActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.rawalinfocom.rcontact.ReLoginEnterPasswordActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.rawalinfocom.rcontact.WebBrowserActivity"
            android:screenOrientation="portrait" />

        <!--receiver-->

        <receiver android:name="com.rawalinfocom.rcontact.receivers.OtpReceiver">
            <intent-filter>
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
        </receiver>

        <receiver android:name="com.rawalinfocom.rcontact.receivers.PhoneCallReceiver">
            <intent-filter>
                <action android:name="android.intent.action.PHONE_STATE" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.NEW_OUTGOING_CALL" />
            </intent-filter>
        </receiver>

        <receiver android:name="com.rawalinfocom.rcontact.receivers.SmsReceiver">
            <intent-filter>
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
        </receiver>

        <!--Services-->

        <service android:name="com.rawalinfocom.rcontact.services.NotificationFCMService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <service android:name="com.rawalinfocom.rcontact.services.FCMNotificationInstanceIdService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <service
            android:name="com.rawalinfocom.rcontact.services.ContactSyncService"
            android:enabled="true" />

        <service
            android:name="com.rawalinfocom.rcontact.services.CallLogIdFetchService"
            android:enabled="true" />

    </application>
</manifest>