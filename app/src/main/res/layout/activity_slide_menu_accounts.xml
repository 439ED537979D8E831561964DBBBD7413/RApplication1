<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rawalinfocom.rcontact.ContactListingActivity">

    <include
        android:id="@+id/include_toolbar"
        layout="@layout/layout_toolbar_public_profile_search"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/include_toolbar"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_view_account"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:gravity="center|start"
            android:orientation="horizontal"
            android:paddingStart="@dimen/activity_horizontal_margin">

            <ImageView
                android:layout_width="42dp"
                android:layout_height="match_parent"
                android:contentDescription="@string/app_name"
                android:padding="8dp"
                android:src="@drawable/ico_avatar" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_view_account"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center|start"
                    android:text="@string/view_account"
                    android:textColor="@color/iconColor"
                    android:textSize="@dimen/text_size_16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/iconColor" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_security"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:paddingStart="@dimen/activity_horizontal_margin">

            <ImageView
                android:layout_width="42dp"
                android:layout_height="match_parent"
                android:contentDescription="@string/app_name"
                android:padding="6dp"
                android:src="@drawable/ico_lock_svg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_security"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center|start"
                    android:text="@string/security"
                    android:textColor="@color/iconColor"
                    android:textSize="@dimen/text_size_16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/iconColor" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>