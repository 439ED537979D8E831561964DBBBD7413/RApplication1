        <TextView
            android:id="@+id/nav_txt_share"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/regularFontColor"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/nav_txt_share_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_10dp"
            android:gravity="center|start"
            android:text="@string/nav_text_share_rcontact"
            android:textColor="@color/regularFontColor"
            android:textStyle="bold"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/drawer_item_bg"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/nav_ll_settings"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal"
        android:paddingEnd="0dp"
        android:paddingStart="@dimen/margin_20dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/nav_txt_settings"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/regularFontColor"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_10dp"
            android:gravity="center|start"
            android:text="@string/nav_text_settings"
            android:textColor="@color/regularFontColor"
            android:textStyle="bold"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/drawer_item_bg"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/nav_ll_rate_us"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal"
        android:paddingEnd="0dp"
        android:paddingStart="@dimen/margin_20dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/nav_txt_rate"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/regularFontColor"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_10dp"
            android:gravity="center|start"
            android:text="@string/nav_text_rate_us"
            android:textColor="@color/regularFontColor"
            android:textStyle="bold"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/drawer_item_bg"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/nav_ll_about"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal"
        android:paddingEnd="0dp"
        android:paddingStart="@dimen/margin_20dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/nav_txt_about"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/regularFontColor"
