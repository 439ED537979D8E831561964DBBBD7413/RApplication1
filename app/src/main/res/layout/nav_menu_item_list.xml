        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_10dp"
            android:gravity="center|start"
            android:text="@string/nav_text_about_help"
            android:textColor="@color/regularFontColor"
            android:textStyle="bold"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/drawer_item_bg"
        android:visibility="visible"/>

    <LinearLayout
        android:id="@+id/nav_ll_export"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal"
        android:paddingEnd="0dp"
        android:paddingStart="@dimen/margin_20dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/nav_txt_export"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/regularFontColor"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_10dp"
            android:gravity="center|start"
            android:text="@string/nav_text_export_db"
            android:textColor="@color/regularFontColor"
            android:textStyle="bold"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/drawer_item_bg"/>

    <LinearLayout
        android:id="@+id/nav_ll_feedback"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal"
        android:paddingEnd="0dp"
        android:paddingStart="@dimen/margin_20dp">

        <TextView
            android:id="@+id/nav_txt_feedback"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/regularFontColor"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_10dp"
            android:gravity="center|start"
