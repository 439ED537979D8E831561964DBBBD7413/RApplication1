<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <LinearLayout
        android:id="@+id/nav_ll_account"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal"
        android:paddingEnd="0dp"
        android:paddingStart="@dimen/margin_20dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/nav_txt_account"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/regularFontColor"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_10dp"
            android:gravity="center|start"
            android:text="@string/nav_text_account"
            android:textColor="@color/regularFontColor"
            android:textStyle="bold"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/drawer_item_bg"
        android:visibility="visible"/>


    <LinearLayout
        android:id="@+id/nav_ll_timeline"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/margin_20dp"
        android:paddingStart="@dimen/margin_20dp">

        <TextView
            android:id="@+id/nav_txt_timeline"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/regularFontColor"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_10dp"
            android:layout_weight="1"
            android:gravity="center|start"
            android:text="@string/nav_text_timeline"
            android:textColor="@color/regularFontColor"
            android:textStyle="bold"/>

        <include layout="@layout/menu_counter"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/drawer_item_bg"/>

    <LinearLayout
        android:id="@+id/nav_ll_events"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal"
        android:paddingEnd="0dp"
        android:paddingStart="@dimen/margin_20dp">

        <TextView
            android:id="@+id/nav_txt_events"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/regularFontColor"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_10dp"
            android:gravity="center|start"
            android:text="@string/nav_text_events"
            android:textColor="@color/regularFontColor"
            android:textStyle="bold"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/drawer_item_bg"/>

    <LinearLayout
        android:id="@+id/nav_ll_rating_history"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal"
        android:paddingEnd="0dp"
        android:paddingStart="@dimen/margin_20dp">

        <TextView
            android:id="@+id/nav_txt_rating"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/regularFontColor"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_10dp"
            android:gravity="center|start"
            android:text="@string/nav_text_rating_history"
            android:textColor="@color/regularFontColor"
            android:textStyle="bold"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/drawer_item_bg"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/nav_ll_invite"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal"
        android:paddingEnd="0dp"
        android:paddingStart="@dimen/margin_20dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/nav_txt_invite"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/regularFontColor"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/nav_txt_invite_contact"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_10dp"
            android:gravity="center|start"
            android:text="@string/nav_text_invite_contact"
            android:textColor="@color/regularFontColor"
            android:textStyle="bold"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/drawer_item_bg"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/nav_ll_share"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal"
        android:paddingEnd="0dp"
        android:paddingStart="@dimen/margin_20dp"
