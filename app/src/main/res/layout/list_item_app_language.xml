<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linear_root_item_country"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.rawalinfocom.rcontact.helper.RippleView
        android:id="@+id/ripple_language_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:rv_alpha="@integer/alpha_ripple"
        app:rv_centered="true"
        app:rv_color="@color/colorPrimary"
        app:rv_rippleDuration="@integer/duration_ripple">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_language_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/activity_half_horizontal_margin"
                android:textColor="@color/colorVeryDarkGrayishBlue2" />

            <android.support.v7.widget.AppCompatRadioButton
                android:id="@+id/checkboxLanguage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imgSelection"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:contentDescription="@string/app_language"
                android:padding="5dp"
                android:src="@drawable/ic_check_circle_privacy_dialog"
                android:visibility="gone" />

        </LinearLayout>
    </com.rawalinfocom.rcontact.helper.RippleView>

</LinearLayout>