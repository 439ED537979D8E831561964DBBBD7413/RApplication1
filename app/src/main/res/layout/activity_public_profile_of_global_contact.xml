<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relative_root_public_profile"
    tools:context="com.rawalinfocom.rcontact.PublicProfileOfGlobalContactActivity">

    <include
        android:id="@+id/include_toolbar"
        layout="@layout/layout_toolbar_public_profile_search"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"/>

    <WebView
        android:id="@+id/webview_public_profile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_below="@+id/include_toolbar"/>

</RelativeLayout>
