<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_root_relation"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_5dp"
    android:background="@color/colorWhite"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ll_business_relation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_relation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:contentDescription="@string/app_name"
            android:padding="@dimen/padding_5dp" />

        <LinearLayout
            android:id="@+id/ll_relation_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="@dimen/margin_10dp"
            android:layout_toEndOf="@+id/image_relation"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_relation_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawablePadding="@dimen/padding_10dp"
                android:gravity="center|start"
                android:textColor="@color/grey_hex_ac"
                android:textSize="@dimen/text_size_12sp" />

            <LinearLayout
                android:id="@+id/ll_relation_organization"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/text_at"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="at"
                    android:textColor="@color/grey_hex_ac" />

                <TextView
                    android:id="@+id/text_organization_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_5dp"
                    android:textColor="@color/grey_hex_75"
                    android:textSize="@dimen/text_size_14sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <CheckBox
            android:id="@+id/checkbox_relation"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_relation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" />
</FrameLayout>
