<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_contact_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rawalinfocom.rcontact.ContactListingActivity">

    <include
        android:id="@+id/include_toolbar"
        layout="@layout/layout_toolbar_settings"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/include_toolbar"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_about"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:gravity="center|start"
            android:orientation="vertical"
            android:paddingStart="@dimen/activity_horizontal_margin">

            <TextView
                android:id="@+id/txt_about"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center|start"
                android:text="@string/str_about"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_size_16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/margin_5dp"
                android:background="@color/iconColor" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_faq"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:orientation="vertical"
            android:paddingStart="@dimen/activity_horizontal_margin">

            <TextView
                android:id="@+id/txt_faq"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center|start"
                android:text="@string/str_faq"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_size_16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/margin_5dp"
                android:background="@color/iconColor" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_terms"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:orientation="vertical"
            android:paddingStart="@dimen/activity_horizontal_margin">

            <TextView
                android:id="@+id/txt_terms"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center|start"
                android:text="@string/str_terms"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_size_16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/margin_5dp"
                android:background="@color/iconColor" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_contact_us"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:orientation="vertical"
            android:paddingStart="@dimen/activity_horizontal_margin">

            <TextView
                android:id="@+id/txt_contact_us"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center|start"
                android:text="@string/str_contact_us"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_size_16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/margin_5dp"
                android:background="@color/iconColor" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_join_us"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:orientation="vertical"
            android:paddingStart="@dimen/activity_horizontal_margin">

            <TextView
                android:id="@+id/txt_join_us"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center|start"
                android:text="@string/str_join_us"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_size_16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/margin_5dp"
                android:background="@color/iconColor" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
