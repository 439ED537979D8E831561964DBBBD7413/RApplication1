<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/view_own_profile"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_half_vertical_margin"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_profile_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="2dp"
        android:paddingTop="2dp">

        <TextView
            android:id="@+id/text_main"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|start"
            android:textColor="@color/colorAccent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_action_type"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/margin_15dp"
                android:contentDescription="@string/app_name"
                android:gravity="center" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/button_request"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:text="@string/str_request"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_size_12sp"
                android:visibility="gone"
                app:backgroundTint="@color/dialogUserNameTextColor" />

            <LinearLayout
                android:id="@+id/ll_privacy"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="center|end"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/button_privacy"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginEnd="14dp"
                    android:layout_marginStart="2dp"
                    android:contentDescription="@string/str_content_description"
                    android:src="@drawable/ico_privacy_public" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/text_sub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>

