<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_own_profile"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_half_vertical_margin"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_profile_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="1dp"
        android:paddingTop="1dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|start"
                    android:textColor="@color/colorAccent"
                    tools:text="1234567890" />

                <TextView
                    android:id="@+id/text_tic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:gravity="center|start"
                    android:textColor="@color/Color_DeepSkyBlue"
                    android:visibility="gone"
                    tools:text="1" />

            </LinearLayout>

            <TextView
                android:id="@+id/text_sub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_12sp"
                tools:text="Home" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top">

                <ImageView
                    android:id="@+id/img_action_whatsapp"
                    android:layout_width="26dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_small"
                    android:contentDescription="@string/app_name"
                    android:paddingStart="@dimen/margin_small"
                    android:src="@drawable/ico_whatsapp_svg" />

                <ImageView
                    android:id="@+id/img_action_type"
                    android:layout_width="26dp"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/app_name"
                    android:paddingEnd="@dimen/margin_small"
                    tools:src="@drawable/ico_phone_alt_svg" />

            </LinearLayout>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/button_request"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:padding="@dimen/margin_small"
                android:text="@string/str_request"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_size_12sp"
                android:visibility="gone"
                app:backgroundTint="@color/dialogUserNameTextColor"
                tools:visibility="gone" />

            <LinearLayout
                android:id="@+id/ll_privacy"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center|end"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/button_privacy"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="2dp"
                    android:contentDescription="@string/str_content_description"
                    android:src="@drawable/ico_privacy_public" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!--  <TextView
          android:id="@+id/text_sub"
