<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_contact_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rawalinfocom.rcontact.ContactListingActivity">

    <include
        android:id="@+id/include_toolbar"
        layout="@layout/layout_toolbar_settings"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize" />

    <LinearLayout
        android:id="@+id/ll_short_by"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/include_toolbar"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:gravity="center|start"
            android:orientation="vertical"
            android:paddingStart="@dimen/activity_horizontal_margin">

            <TextView
                android:id="@+id/txt_short_by"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center|start"
                android:text="@string/short_by"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_size_16sp" />

            <TextView
                android:id="@+id/text_short_by"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_half_horizontal_margin"
                android:gravity="center|start"
                android:text="@string/abc_by_first_name"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_size_14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/margin_5dp"
                android:background="@color/iconColor" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_export"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/margin_10dp"
            android:layout_height="62dp"
            android:orientation="vertical"
            android:paddingStart="@dimen/activity_horizontal_margin">

            <TextView
                android:id="@+id/txt_export_contact"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center|start"
                android:text="@string/export_format"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_size_16sp" />

            <TextView
                android:id="@+id/text_export_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_half_horizontal_margin"
                android:gravity="center|start"
                android:text="@string/phone_storage"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_size_14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/margin_5dp"
                android:background="@color/iconColor" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
